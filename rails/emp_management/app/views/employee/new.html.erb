<div class="signup_form_body">
  <br  />
  <h class="signup_title">Employee Sign Up</h>
  <br />
  <%= form_for @employee,:url=> "/employee/create", method:'post' do |f| %>
  <div class="mb-3 flex items-center">
    <%= f.label :name %> <%= f.text_field :name, class: "form-control" ,placeholder: "Employee Name" %>
  </div>
  <div class="mb-3 flex items-center">
    <%= f.label :email %> <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="mb-3 flex items-center">
    <%= f.label :ID %> <%= f.text_field :email, class: "form-control", placeholder: "Employee ID" %>
  </div>
  <div class="gender flex items-center"><%= f.label :gender,class:"label_gender" %> <%= f.radio_button :gender, 'Male', checked: "checked" %>Male <%= f.radio_button :gender, 'Female',required: true %>Female<br /></div>
  <div class="mb-3 flex items-center">
    <%= f.label :salary %> <%= f.text_field :salary , class: "form-control", placeholder:"Salary" %>
  </div>
  <div class="form-group">
        <%= f.label :department %>
        <%= f.select :department, options_for_select(%w[ HR IT SALES ACCOUNTS]), class: "form-control" %>
  </div>
  
  
  <div class="mb-3 flex items-center">
    <%= f.submit "Sign Up" ,:class => 'button' %>
  </div>
  <% end %>
</div>

