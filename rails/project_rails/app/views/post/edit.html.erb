<br /><%= link_to("<< Back to List",'/post/index', :class => 'back-link') %>

<div class="blogs edit">
  <h2>Update Blog</h2>
  
  <%= form_for @post, url: "/post/edit/#{@post.id}" ,:method => 'patch' do |f| %>
     
  <tr>
    <th>Title :</th>
    <td><%= f.text_field(:title) %></td>
  </tr>
  <br />
  <tr>
    <th>Body :</th>
    <td><%= f.text_field(:body)  %></td>
   
  </tr>
    
  <div class="form-buttons">
    <%= f.submit("Update Blog") %>
  </div>
<% end %>

</div>
